@model IEnumerable<OrderDetailsModel>
@{
    ViewData["Title"] = "Order Details";
    decimal total = 0;
    decimal subtotal = 0;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name ="viewport" content="width=device-width"/>
        <title>Order Details</title>
    </head>
    <body>
    <h3>Order Details</h3>

    <div class="table table-striped">
        <table class="table" id="detail_order">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Order Code</th>
                    <th>Product name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    subtotal = item.Quantity * item.Price;
                    total += subtotal;
                    <tr>
                        <input type="hidden" asp-for="@item.OrderCode" class="getId"/>
                        <th>@item.Id</th>
                        <td>@item.UserName</td>
                        <td>@item.OrderCode</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Price.ToString("#,##0 VND")</td>
                        <td>@item.Quantity</td>
                        <td>@subtotal.ToString("#,##0 VND")</td>
                     
                    </tr>
                }
                <tr>
                    <td>Total:</td>
                    <td></td>
                    <td></td>
                    <td></td>

                    <td>@total.ToString("#,##0 VND")</td>
                    @* <td>Shipping cost: @ViewBag.ShippingCost.ToString("#,##0")</td> *@
                    <td>
                        @if(@ViewBag.Status != 3)
                        {
                            <select class="form-control select-update-order">
                                @if(ViewBag.Status == 0)
                                {
                                    <option disabled value="1">Đơn hàng mới</option>
                                    <option value="0">Đã xử lý</option>
                                }
                                else
                                {
                                    <option value="1">Đơn hàng mới</option>
                                    <option value="0">Đã xử lý</option>
                                }
                            </select>
                        }
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
    </body>
</html>
@section Scripts {
    <script>
        new DataTable('#detail_order', {
            layout: {
                tobStart: {
                    buttons: ['pdf', 'print']
                }
            }
        });
    </script>
}

